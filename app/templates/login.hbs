<div class="row login">
    <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
        <h2 class="card-title text-xs-center">SIGN IN</h2>
        <hr/>
        <form {{action 'authentice' on='submit'}}>
            <div class="form-group pad-top">
                {{input value=identification placeholder="EMAIL" class="form-control"}}
            </div>
            <div class="form-group">
                {{input type="password" value=password placeholder="PASSWORD" class="form-control"}}
            </div>
            <div class="row sub-action">
                <div class="col-xs-6">
                    {{input type="checkbox" checked=remember id="remember"}} <label for="remember">REMEMBER ME</label>
                </div>
                <div class="col-xs-6 text-xs-right">
                    {{link-to 'FORGOT PASSWORD' 'password-reset' class="text-muted password-reset-link"}}
                </div>
            </div>
            <div class="form-group pad-top">
                <button type="submit" class="btn btn-primary btn-block" {{action 'authenticate'}} disabled={{if submitDisabled 'disabled'}}>{{submitText}}</button>
            </div>
            <div class="form-group text-xs-center">
                <span class="text-muted">OR</span> {{link-to 'CREATE AN ACCOUNT' 'register' class="text-info register-link"}}
            </div>
        </form>
    </div>
</div>
