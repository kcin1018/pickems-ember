<div class="teams">
    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <h1>Teams</h1>
        </div>
        <div class="col-xs-12 col-sm-6 text-xs-right">
            <button class="btn btn-secondary" {{action 'toggleCreateTeam'}}>{{fa-icon 'plus'}} Create Team</button>
            {{#if showCreateTeam}}
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <div class="input-group">
                            {{input value=newTeamName class="form-control" placeholder='New team name'}}
                            <div class="input-group-addon btn btn-primary" {{action 'clearFilter'}}>{{fa-icon 'plus'}}</div>
                        </div>
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-6 col-md-4 col-md-offset-8">
            <div class="input-group">
                <div class="input-group-addon">{{fa-icon 'search'}}</div>
                {{input class='form-control' value=filter key-up=(action 'filterTeams') placeholder='Filter'}}
                <div class="input-group-addon clear-filter" {{action 'clearFilter'}}>{{fa-icon 'remove'}}</div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">&nbsp;</div>
    </div>
    <div class="row">
        {{#each teams as |team|}}
        <div class="col-xs-12 col-md-6">
            <div class="team">
                <h4 class="name">{{team.name}}</h4>
                <h5 class="owner">{{team.user.fullname}}</h5>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="circle">
                            420
                            <div class="sub-text">pts</div>
                        </div>
                        <div class="circle {{if team.paid 'paid' 'not-paid'}}">
                            {{if team.paid '$0' '$10'}}
                            <div class="sub-text">owed</div>
                        </div>
                    </div>
                    <div class="col-xs-12">
                        <hr/>
                        <div class="actions">
                            <a class="card-link" href="#"><i class="fa fa-clipboard"></i> Make Picks</a>
                            <a class="card-link" href="#"><i class="fa fa-edit"></i> Edit</a>
                            <a class="card-link" href="#"><i class="fa fa-trash"></i> Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
