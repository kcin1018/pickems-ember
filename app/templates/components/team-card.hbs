<div class="col-xs-12 col-md-6">
    <div class="team">
        <h4 class="name">{{team.name}}</h4>
        <div class="info">
            <h5 class="owner">Owned by {{team.user.fullname}}</h5>
            <h6 class="status text-xs-center">
                {{#if team.paid}}
                <div class="paid">Paid</div>
                {{else}}
                    {{#if session.data.authenticated.admin}}
                    <div class="not-paid admin" {{action 'markPaid'}}>Mark as paid</div>
                    {{else}}
                    <div class="not-paid"><a href="https://www.paypal.com/" target="_new">paypal: mrimler@gmail.com</a></div>
                    {{/if}}
                {{/if}}
            </h6>
        </div>
        <hr/>
        <div class="points row">
            <div class="col-xs-6 text-xs-center">
                <div class="heading">REG</div>
                <div class="number">325pts</div>
                <div class="rank">#1</div>
            </div>
            <div class="col-xs-6 text-xs-center">
                <div class="heading">PLAYOFF</div>
                <div class="number">121pts</div>
                <div class="rank">#3</div>
            </div>
        </div>
        <hr/>
        <div class="actions">
            <div class="row">
                <div class="col-xs-4 text-xs-center">
                    <a class="card-link" href="#"><i class="fa fa-clipboard"></i> Picks</a>
                </div>
                <div class="col-xs-4 text-xs-center">
                    <a class="card-link" href="#"><i class="fa fa-edit"></i> Edit</a>
                </div>
                <div class="col-xs-4 text-xs-center">
                    <a class="card-link text-danger" href="#"><i class="fa fa-trash"></i> Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>
