<div class="row register">
    <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3">
        <h2 class="card-title text-xs-center">CREATE AN ACCOUNT</h2>
        <hr/>

        <div class="form-group{{if errors.email ' has-danger'}}">
            {{input class=(if errors.email 'form-control form-control-danger' 'form-control') value=registrantData.email placeholder='Email'}}
            {{#if errors.email}}
            <div class="text-help">{{errors.email}}</div>
            {{/if}}
        </div>

        <div class="row">
            <div class="col-xs-6">
                <div class="form-group{{if errors.first_name ' has-danger'}}">
                    {{input class=(if errors.first_name 'form-control form-control-danger' 'form-control') value=registrantData.first_name placeholder='First Name'}}
                    {{#if errors.first_name}}
                    <div class="text-help">{{errors.first_name}}</div>
                    {{/if}}
                </div>
            </div>
            <div class="col-xs-6">
                <div class="form-group{{if errors.last_name ' has-danger'}}">
                    {{input class=(if errors.last_name 'form-control form-control-danger' 'form-control') value=registrantData.last_name placeholder='Last Name'}}
                    {{#if errors.last_name}}
                    <div class="text-help">{{errors.last_name}}</div>
                    {{/if}}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <div class="form-group{{if errors.password ' has-danger'}}">
                    {{input class=(if errors.password 'form-control form-control-danger' 'form-control') type="password" value=registrantData.password placeholder='Password'}}
                    {{#if errors.password}}
                    <div class="text-help">{{errors.password}}</div>
                    {{/if}}
                </div>
            </div>
            <div class="col-xs-6">
                <div class="form-group{{if errors.passwordConfirm ' has-danger'}}">
                    {{input class=(if errors.passwordConfirm 'form-control form-control-danger' 'form-control') type="password" value=registrantData.passwordConfirm placeholder='Verify Password'}}
                    {{#if errors.passwordConfirm}}
                    <div class="text-help">{{errors.passwordConfirm}}</div>
                    {{/if}}
                </div>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block" {{action 'createAccount'}} disabled={{if submitDisabled 'disabled'}}>{{submitText}}</button>
        </div>
    </div>
</div>
